<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="v01-create-balance-operations-table" author="danilalisichkin">
        <createTable tableName="balance_operations">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_balance_operations"/>
            </column>
            <column name="payout_account_user_id"
                    type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="new_balance"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="amount"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="type"
                    type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at"
                    type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="payout_account_user_id"
                                 baseTableName="balance_operations"
                                 constraintName="FK_BALANCE_OPERATIONS_ON_PAYOUT_ACCOUNT_USER"
                                 referencedColumnNames="id"
                                 referencedTableName="payout_accounts"/>
    </changeSet>
</databaseChangeLog>