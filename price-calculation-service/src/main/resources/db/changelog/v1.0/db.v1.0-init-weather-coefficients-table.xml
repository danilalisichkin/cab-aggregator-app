<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="v1.0-create-weather-coefficients-table" author="danilalisichkin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="weather_coefficients"/>
            </not>
        </preConditions>

        <createTable tableName="weather_coefficients">
            <column autoIncrement="true"
                    name="id"
                    type="INT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_weather_coefficients"/>
            </column>
            <column name="weather"
                    type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="price_coefficient"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <rollback>
            <dropTable tableName="weather_coefficients"/>
        </rollback>
    </changeSet>

    <changeSet id="v1.0-add-constraints-for-weather" author="danilalisichkin">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="weather_coefficients"/>
        </preConditions>

        <addUniqueConstraint columnNames="weather"
                             constraintName="uc_weather_coefficients_weather"
                             tableName="weather_coefficients"/>

        <rollback>
            <dropUniqueConstraint
                    tableName="weather_coefficients"
                    constraintName="uc_weather_coefficients_weather" />
        </rollback>
    </changeSet>

    <changeSet id="v1.1-create-index-for-weather-column" author="danilalisichkin">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="weather_coefficients"/>
        </preConditions>

        <createIndex indexName="idx_weather_coefficients_weather"
                     tableName="weather_coefficients">
            <column name="weather"/>
        </createIndex>

        <rollback>
            <dropIndex indexName="idx_weather_coefficients_weather"
                       tableName="weather_coefficients"/>
        </rollback>
    </changeSet>

</databaseChangeLog>