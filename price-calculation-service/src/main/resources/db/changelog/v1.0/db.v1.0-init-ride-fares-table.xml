<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="v1.0-create-ride-fares-table" author="danilalisichkin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ride_fares"/>
            </not>
        </preConditions>

        <createTable tableName="ride_fares">
            <column autoIncrement="true"
                    name="id"
                    type="INT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_ride_fares"/>
            </column>
            <column name="fare_name"
                    type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="base_price_per_kilometer"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="base_price_per_minute"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="ride_fares"/>
        </rollback>
    </changeSet>

    <changeSet id="v1.0-add-constraints-for-fare-name" author="danilalisichkin">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="ride_fares"/>
        </preConditions>

        <addUniqueConstraint columnNames="fare_name"
                             constraintName="uc_ride_fares_fare_name"
                             tableName="ride_fares"/>

        <rollback>
            <dropUniqueConstraint
                    tableName="ride_services"
                    constraintName="uc_ride_fares_fare_name" />
        </rollback>
    </changeSet>

</databaseChangeLog>